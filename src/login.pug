extends _layout.pug

block vars
  - var pageId = 'login'

block content
  <div class="left logos logo-spelling" ><a class="logo-link" href="https://neuromethod.halcyon.bio" itemprop="logos" itemscope="" itemtype="WebsiteLogo"><img class="logo-image" src="/img/logo.svg" alt="HALCYON.BIO" itemprop="image"></a>
        </div>
  section
    .container
      .row
        .col-md-8.offset-md-2.col-12
          h2 Login
          login
            user-email.input(placeholder='Email')
            user-password.input(placeholder='Password')
            .error(if='{ errorMessage }')
              | { errorMessage }

            button.input(type='submit')
              | Login
          a(href='/reset-password') Reset password <br />  
          a(href='/signup') Create your account
block header
