.performance-facts
  line-height 1.4em
  font-size small
  color #324099
  border 1px solid #324099
  max-width 360px
  padding 0.5rem

.serving-size
  font-size: 12pt
  line-height: 10pt

.performance-facts__header, table
  border-collapse collapse
  white-space normal

.performance-facts__title
  font-weight 800
  font-size 2rem
  margin 0 0 0.25rem 0
  line-height 1em

.performance-facts__header
  border-bottom 10px solid #324099
  padding 0 0 0.25rem 0
  margin 0 0 0.5rem 0
  border-top none !important
  border-top none !important

.performance-facts__header
p
  margin 0

.performance-facts__table
  width 100%

th
td
  font-weight normal
  text-align left
  padding 0.25rem 0
  border-top 1px solid #324099
  white-space nowrap

td
  &:last-child
    text-align right
@media screen and (min-width:768px) {
  td
    &:last-child 
      padding-right: 10px
}

.blank-cell
  width 1rem
  border-top 0

.thick-row th
.thick-row td
  border-top-width 5px

.no-row
  border-top-width 0px
  vertical-align: top;

.small-info
  font-size 0.7rem

.performance-facts__table--small
  width 100%
  border-bottom 1px solid #324099
  margin 0 0 0.5rem 0

  thead
    tr
      border-bottom 1px solid #324099

th
td
  border 0
  padding 0

.performance-facts__table th
.performance-facts__table td
  white-space normal

.performance-facts__table--grid
  width 100%
  margin 0 0 0.5rem 0

  td
    &:last-child
      text-align: left

      &:before
        content: "â€¢"
        font-weight bold
        margin 0 0.25rem 0 0

.text-center
  text-align center
.thick-end
  border-bottom 10px solid #324099
.thin-end
  border-bottom 1px solid #324099
