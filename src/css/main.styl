      font-size: 11vw
    @media screen and (min-width:560px)
      font-size: 60px
      z-index: 99
  .desktop
    @media screen and (max-width:767px)
      display: none;
    @media screen and (min-width:767px)
      display: block;
  .mobile
    @media screen and (max-width:767px)
      display: block;
    @media screen and (min-width:767px)
      display: none;

  a
      color: White !important
  .cta
