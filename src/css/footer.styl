/* FOOTER START */
footer
  background-color: $hBlue2
  padding-top: 5vh
  padding-bottom: 10vh

  *
    color: $white

  svg
    g
      fill: $white

  .social-icons-row
    justify-content: center
    margin-top: 18px
    margin-bottom: 15px

  .footer-cards
    float: right

    img
      margin: 0 2px

      &:last-child
        margin: 0

  a
    margin: 0 8px
    color: $hOrange !important

  .footer-bottom
    padding-top: 22px
    border-top: 1px solid $white

    & > *
      padding: 0

/* FOOTER END */
