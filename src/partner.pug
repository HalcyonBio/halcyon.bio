extends _layout.pug

block vars
  - var pageId = 'affiliate-signup'

block content
  section
    .container
      .row
        .col-md-8.offset-md-2.col-12
          h1 Thank you for applying to our Brand Ambassador Program
          h2 Start by creating an account below
          register(immediate-login='true' affiliate='true')
            user-status.input(placeholder='Email')
            user-name.input(placeholder='Name')
            user-email.input(placeholder='Email')
            user-password.input(placeholder='Password')
            user-password-confirm.input(placeholder='Retype Password')
            recaptcha(sitekey='6Ldp8mQUAAAAAKfBJ8OxNgvvMkNxvQhbnFfYVO-D')
            .error(if='{ errorMessage }')
              | { errorMessage }

            button.input(type='submit')
              | Register
          a(href='login') Already have an account?
